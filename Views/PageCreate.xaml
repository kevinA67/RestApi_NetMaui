<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM022024RestApi.Views.PageCreate"
             Title="PageCreate">
    <VerticalStackLayout>
        <StackLayout>
            <Image x:Name="foto" 
                   BackgroundColor="Azure" 
                   HeightRequest="300" 
                   WidthRequest="200"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>

            <Button Text="Selecciona una imagen" Clicked="ButtonSeleccion_Clicked"/>

            <Entry x:Name="txtNombres" Placeholder="Ingrese su nombre"/>
            <Entry x:Name="txtApellidos" Placeholder="Ingrese su apellido"/>
            <Entry x:Name="txtDirecion" Placeholder="Ingrese su direccion"/>

            <Button Text="Guardar" Clicked="ButtonGuardar_Clicked"/>

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>